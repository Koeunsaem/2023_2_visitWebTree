{
    "name": "VISIT WEB TREE",
    "description": "방문한 웹사이트를 구조화시켜 보여주는 크롬 확장 프로그램입니다.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup":"popup.html"
    },

    "host_permissions": [
        "http://developer.chrome.com/*"
    ],

    "permissions":[
        "history",
        "tabs",
        "activeTab"
    ],

    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ]
}